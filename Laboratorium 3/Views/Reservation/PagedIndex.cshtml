@using Laboratorium_3.Models;
@using Laboratorium_3.Models.ReservationModels;

@model PagingList<Reservation>

<h1>Lista rezerwacji</h1>
<a class="btn btn-primary" asp-controller="Reservation" asp-action="Create">Utworz rezerwacje</a>
<a class="btn btn-primary" asp-controller="Reservation" asp-action="Index">Zwykla witryna</a>

@if (Model.Data.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Data.GetEnumerator().Current.Wlasciciel)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data.GetEnumerator().Current.Miasto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data.GetEnumerator().Current.Data)
                </th>
                <th>
                    Akcje
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in @Model.Data)
            {
                <tr>
                    <td>
                        @item.Wlasciciel
                    </td>
                    <td>
                        @item.Miasto
                    </td>
                    <td>
                        @item.Data.ToShortDateString()
                    </td>
                    <td>
                        <a class="btn btn-outline-primary" asp-controller="Reservation" asp-action="Update" asp-route-id="@item.Id">Edytuj</a>
                        <a class="btn btn-outline-info" asp-controller="Reservation" asp-action="Details" asp-route-id="@item.Id">Szczegoly</a>
                        <a class="btn btn-outline-danger" asp-controller="Reservation" asp-action="Delete" asp-route-id="@item.Id">Usun</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<nav aria-label="Books page navigation">
    <ul class="pagination">
        @if (Model.IsPrevious)
        {
            <li class="page-item">
                <a class="page-link"
                   asp-controller="Reservation"
                   asp-action="PagedIndex"
                   asp-route-page="@(Model.Page - 1)"
                   asp-route-size="@Model.Size">
                    Poprzednia
                </a>
            </li>
        }
        else
        {
            <li class="page-item disabled">
                <a class="page-link">Poprzednia</a>
            </li>
        }
        <li class="page-item disabled">
            <a class="page-link">@Model.Page</a>
        </li>
        @if (Model.IsNext)
        {
            <li class="page-item">
                <a class="page-link"
                   asp-controller="Reservation"
                   asp-action="PagedIndex"
                   asp-route-page="@(Model.Page + 1)"
                   asp-route-size="@Model.Size">
                    Następna
                </a>
            </li>
        }
        else
        {
            <li class="page-item disabled">
                <a class="page-link">Następna</a>
            </li>
        }
    </ul>
</nav>