@using Laboratorium_3.Models;
@using Laboratorium_3.Models.ReservationModels;

@model List<Reservation>

<h1>Lista rezerwacji</h1>
<a class="btn btn-primary" asp-controller="Reservation" asp-action="Index">Powrót</a>
<br />
<br />
<form asp-controller="Reservation" asp-action="SearchIndexApi" method="get">
    <label for="search">Szukaj według Właściciela</label>
        <input type="text" class="form-control" id="search" name="search" value="@ViewBag.SearchTerm" />
        <br />
    <button type="submit" class="btn btn-primary">
        Szukaj
    </button>
</form>
<br />

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(i => Model[0].ContactId)
                </th>
                <th>
                    @Html.DisplayNameFor(i => Model[0].Miasto)
                </th>
                <th>
                    @Html.DisplayNameFor(i => Model[0].Data)
                </th>
                <th>
                    Akcje
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.ContactName
                    </td>
                    <td>
                        @item.Miasto
                    </td>
                    <td>
                        @item.Data.ToShortDateString()
                    </td>
                    <td>
                        <a class="btn btn-outline-primary" asp-controller="Reservation" asp-action="Update" asp-route-id="@item.Id">Edytuj</a>
                        <a class="btn btn-outline-info" asp-controller="Reservation" asp-action="Details" asp-route-id="@item.Id">Szczególy</a>
                        <a class="btn btn-outline-danger" asp-controller="Reservation" asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Nie znaleziono rezerwacji.</p>
}