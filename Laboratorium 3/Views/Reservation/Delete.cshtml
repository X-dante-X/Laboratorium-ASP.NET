@using Laboratorium_3.Models.ReservationModels;
@model Reservation

<h1>
    Czy na pewno chcesz usunąć rezerwacje?
</h1>
<h3>Wlasciciel: @Model.ContactName</h3>
<h3>Data: @Model.Data.ToShortDateString()</h3>
<h3>Miasto: @Model.Miasto</h3>
<form asp-action="Delete" method="post"> 
    <input asp-for="Id" />
    <button class="btn btn-danger" type="submit">Tak</button>
    <a class="btn btn-secondary" asp-action="Index">Nie</a>
</form>