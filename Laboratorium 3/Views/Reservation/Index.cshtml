@using Laboratorium_3.Models;
@using Laboratorium_3.Models.ReservationModels;

@model List<Reservation>

<h1>Lista rezerwacji</h1>
<a class="btn btn-primary" asp-controller="Reservation" asp-action="Create">Utworz rezerwacje</a>
<a class="btn btn-primary" asp-controller="Reservation" asp-action="PagedIndex">Stronicowana witryna</a>
<a class="btn btn-primary" asp-controller="Reservation" asp-action="SearchIndexApi">Wyszukiwarka Właściciela API</a>


@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    <a href="@Url.Action("Index", new { sortOrder = ViewBag.CurrentSort == "ContactId_asc" ? "ContactId_desc" : "ContactId_asc" })">
                        @Html.DisplayNameFor(i => Model[0].ContactId)
                        <span class="sort-arrow @(ViewBag.CurrentSort == "ContactId_asc" ? "up" : (ViewBag.CurrentSort == "ContactId_desc" ? "down" : ""))"></span>
                    </a>
                </th>
                <th>
                    <a href="@Url.Action("Index", new { sortOrder = ViewBag.CurrentSort == "Miasto_asc" ? "Miasto_desc" : "Miasto_asc" })">
                        @Html.DisplayNameFor(i => Model[0].Miasto)
                        <span class="sort-arrow @(ViewBag.CurrentSort == "Miasto_asc" ? "up" : (ViewBag.CurrentSort == "Miasto_desc" ? "down" : ""))"></span>
                    </a>
                </th>
                <th>
                    <a href="@Url.Action("Index", new { sortOrder = ViewBag.CurrentSort == "Data_asc" ? "Data_desc" : "Data_asc" })">
                        @Html.DisplayNameFor(i => Model[0].Data)
                        <span class="sort-arrow @(ViewBag.CurrentSort == "Data_asc" ? "up" : (ViewBag.CurrentSort == "Data_desc" ? "down" : ""))"></span>
                    </a>
                </th>
                <th>
                    Akcje
                </th>
            </tr>
        </thead>


        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.ContactName
                    </td>
                    <td>
                        @item.Miasto
                    </td>
                    <td>
                        @item.Data.ToShortDateString()
                    </td>
                    <td>
                        <a class="btn btn-outline-primary" asp-controller="Reservation" asp-action="Update" asp-route-id="@item.Id">Edytuj</a>
                        <a class="btn btn-outline-info" asp-controller="Reservation" asp-action="Details" asp-route-id="@item.Id">Szczególy</a>
                        <a class="btn btn-outline-danger" asp-controller="Reservation" asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Nie znaleziono rezerwacji.</p>
}
